{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "steam-desktop-guard",
  "version": "1.0.0",
  "identifier": "com.taurusxin.steam-desktop-guard",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Steam Desktop Guard",
        "width": 450,
        "height": 640,
        "minWidth": 450,
        "minHeight": 450,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
